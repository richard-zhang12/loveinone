<%- include('partials/header1') %>
<div class="container mt-5 text-center">
  <div class="row">
     <div class="col-sm">
          <!-- <h1 class="mt-4 ">Welcome!</h1> -->
      </div>

  <div class="col-sm">
    <form action="/signup" method="POST">
      <h1 class="mt-4">Sign Up</h1>          
      <p class="text-center"> It's free and always will be </p>
      <div class="row mt-4"> 
        <div class="col">
          <input type="text" name="firstname" class="form-control" placeholder="First Name" required>
        </div>
        <div class="col">
          <input type="text" name="lastname" class="form-control" placeholder="Last Name" required>
        </div>        
      </div>    
      <div class="row mt-4"> 
        <div class="col">
            <input type="text" list="gender" name="gender" class="form-control" placeholder="Gender" required>
            <datalist id="gender">
            <option value="Male">
            <option value="Female">
        </div>
        <div class="col">
          <input type="number" name="birthyear" class="form-control" placeholder="Year of Birth" min="1950" max="2005" required>
        </div>        
      </div>      
      
      <input type="email" name="email" class="form-control mt-4" placeholder="Email" required>
      <input type="password" name="password" class="form-control mt-4" title="5 or more characters" pattern=".{5,}" placeholder="Password" required>
      
      <p class="text-danger mt-2"><%= message %></p>

      <div class="mt-4">
      <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
      </div>
      </form>

  </div>        
    
  <div class="col-sm"> 
    </div>
    
  </div>
</div> 


<%- include('partials/footer') %>