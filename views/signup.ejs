<%- include('partials/header1') %>
<div class="container mt-5 iForm">
    <form action="/signup" method="POST">
      <h2 class="mt-2">Sign Up</h2> 
      <div class="row mt-4"> 
        <div class="col">
          <input type="text" name="username" class="form-control" placeholder="Username" required>
        </div>
      </div>    
      
      <input type="email" name="email" class="form-control mt-4" placeholder="Email" required>

      <input type="password mt-4" name="password" class="form-control mt-4" title="5 or more characters" pattern=".{5,}" placeholder="Password" required>
      
      <p class="text-danger mt-2"><%= message %></p>

      <div class="mt-4">
      <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
      </div>
      </form>
    
  </div>
</div> 


<%- include('partials/footer') %>