<%- include('partials/header1') %>

<div class="container iForm mt-3 text-center">
    <div class="row">
        <div class="media">
            <img src="<%= user.image %>" class="mr-3" style="width:150px;height:120px;">
            <div class="media-body">
                <h5 class="mt-0"><%=user.username%></h5>
                <small>Age: <%= new Date().getFullYear()-user.yearBorn%> </small> <br>
                <small><%=user.city%>, <%=user.state%> <%=user.country%> </small>
            </div>
        </div>

        <a href="/userProfile/<%= user._id %>" style="display:block; width: 100%"
            class="btn btn-outline-dark btn-sm my-3">Profile</a>
        <a href="/posts/<%= user._id %>" style="display:block; width: 100%"
            class="btn btn-outline-dark btn-sm my-3">Posts</a>
        <a href="/chatPrivate/<%= user._id %>" style="display:block; width: 100%"
            class="btn btn-outline-dark btn-sm my-3">Chat</a>

        <% if (message) { %>
        <p class="text-success mt-3"><%= message %></p>
        <% } else {%>
            <p class="text-success my-3" style="visibility: hidden;">No message</p>
        <% } %>

        <% if (!iscontact) { %>
        <a href="/contactAdd/<%=user._id%>" onclick="contactAdd();return false;" style="display:block; width: 100%"
            class="btn btn-outline-dark btn-sm">Add to contacts</a>
        <% } else {%>
        <a href="/contactDelete/<%=user._id%>" onclick="contactDelete();return false;"
            style="display:block; width: 100%" class="btn btn-outline-dark btn-sm">Remove from contacts</a>
        <% } %>


    </div>
</div>

<%- include('partials/footer') %>