<%- include('partials/header1') %>

<form action="/passwordForgot" method="POST" class="iForm">
    <h3 class="mt-4">Update Password</h3>
    <div class="form-group">
        <label for="email" class="mt-4">Email</label>
        <input type="email" name="email" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="password"  class="mt-2">Type new password</label>
        <input type="password mt-4" name="password" class="form-control" title="5 or more characters" pattern=".{5,}" required>
    </div>
    <div class="mt-5">
        <button class="btn btn-primary btn-block" type="submit">Update password</button>
    </div>
</form>



