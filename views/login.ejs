<%- include('partials/header') %>

  <form action="/login" method="POST" class="iForm">
    <h1 class="mt-4">Log In</h1>
    <div class="form-group">
      <input type="email" name="email" class="form-control mt-5" placeholder="Login Email" required>
    </div>
    <div class="form-group">
      <input type="password" name="password" class="form-control mt-4 mb-4" placeholder="Password" required>

    </div>
    <p class="text-left"><%= message %></p>
    <div class="my-4">
      <button class="btn btn-primary btn-block" type="submit">Log In</button>
    </div>
    <a href="/passwordForgot">Forgot password?</a>

    <a href="/signup">
      <button type="button" class="btn btn-outline-dark btn-block mt-3">Sign Up</button>
    </a>

  </form>

  

<%- include('partials/footer') %>