     <div class="col-sm">
       
         <h3 class="text-center"> My Info </h3>
         <img class="card-img-top" id="uploadpic" src="<%=user.image%>" alt="My Photo">

         <form method="POST" action="/uploadAvator" enctype="multipart/form-data" id="uploadForm">
            <input type="file" name="upload" value="<%=user.image%>" onchange="showpic(this);" multiple>
            <input type="submit" class="btn btn-success">
        </form>
        <hr>

        <form action="/myinfo" method="POST"></form>
         <div class="row mt-4"> 
           <div class="col">
             <input type="text" name="firstname" value=<%=user.firstname%> class="form-control" placeholder="First Name" required>
           </div>
           <div class="col">
             <input type="text" name="lastname" value=<%=user.lastname%> class="form-control" placeholder="Last Name" required>
           </div>        
         </div>  
         <div class="row mt-4"> 
            <div class="col">
                <input type="text" list="gender" name="gender" value=<%=user.gender%> class="form-control" placeholder="Gender" required>
                <datalist id="gender">
                <option value="Male">
                <option value="Female">
            </div>
            <div class="col">
              <input type="number" name="birthyear" class="form-control" placeholder="Year of Birth" min="1950" max="2005" required>
            </div>        
          </div>      
         
         <input type="email" name="email" class="form-control mt-4" placeholder="Email" required>
         <button class="btn btn-primary btn-block mt-4" type="submit">Save</button>
         </form>
   
     </div>        
       
     <div class="col-sm"> 
       </div>
       
     </div>
